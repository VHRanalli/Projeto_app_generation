<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zico2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_principal"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center_horizontal"
        android:shadowColor="@color/realceSlc"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:text="@string/texto_principal"
        android:textAlignment="center"
        android:textColor="@color/textoCurioso"
        android:textSize="11pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <Button
        android:id="@+id/gerar_curiosidade"
        android:layout_width="117dp"
        android:layout_height="55dp"
        android:text="@string/btnText"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_principal"
        app:layout_constraintVertical_bias="0.886" />

    <Button
        android:id="@+id/botao_automacao"
        android:layout_width="116dp"
        android:layout_height="52dp"
        android:text="@string/txt_aleatorio"
        app:backgroundTint="@color/realceSlc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gerar_curiosidade"
        app:layout_constraintTop_toBottomOf="@+id/texto_principal"
        app:layout_constraintVertical_bias="0.887" />
</androidx.constraintlayout.widget.ConstraintLayout>